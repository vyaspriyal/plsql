CREATE OR REPLACE TRIGGER BI_B
BEFORE INSERT OR UPDATE OR DELETE ON SUPER
FOR EACH ROW
ENABLE
DECLARE
V_USER VARCHAR2(20);
BEGIN 
SELECT NAME INTO V_USER FROM EMPLOYEE;
IF INSERTING THEN
 DBMS_OUTPUT.PUT_LINE(V_USER || 'INSERTING');
 ELSIF DELETING THEN 
 DBMS_OUTPUT.PUT_LINE(V_USER || ' DELETEING');
ELSIF UPDATING THEN 
DBMS_OUTPUT.PUT_LINE(V_USER);
END IF ;
END


